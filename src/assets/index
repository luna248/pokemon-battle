<script>
class Pokemon {
  constructor(name, type, hp, def, atk, legend) {
    this.name = name;
    this.type = type;
    this.hp = hp;
    this.def = def;
    this.atk = atk;
    this.legend = legend;

  if(name == "")  alert("Name cannot be empty");
  if(!isNaN(name)) alert("Name cannot be a number");

  if(type == "")  alert("Type cannot be empty");
  if(!isNaN(type)) alert("Type cannot be a number");

  if(isNaN(hp)) alert("HP is not a number.");
  if(isNaN(def)) alert("Defense Power is not a number.");
  if(isNaN(atk)) alert("Attack Power is not a number.");

  if(typeof(legend) !== 'boolean') alert("Legend type has to be true or false.");
  }
}

var pikachu = new Pokemon("Pikachu","Electric", 140, 15, 30, false);
var bulbasaur = new Pokemon("Bulbasaur","Grass", 120, 20, 30, false);
var charmander = new Pokemon("Charmander","Fire", 150, 15, 35, false);
var squirtle = new Pokemon("Squirtle","Water", 130, 10, 25, false);
var articuno = new Pokemon("Articuno","Flying", 400, 50, 60, true);

function Pokemon1() {
    var x = document.getElementById("P1Name").value;
    if(x == 'pikachu'){
      document.getElementById("P1Type").innerHTML = pikachu.type ;
      document.getElementById("P1hp").innerHTML = pikachu.hp ;
      document.getElementById("P1Defense").innerHTML = pikachu.def ;
      document.getElementById("P1Attack").innerHTML = pikachu.atk ;
      document.getElementById("P1Legend").innerHTML = pikachu.legend ;
    }
    if(x == 'bulbasaur'){
      document.getElementById("P1Type").innerHTML = bulbasaur.type ;
      document.getElementById("P1hp").innerHTML = bulbasaur.hp ;
      document.getElementById("P1Defense").innerHTML = bulbasaur.def ;
      document.getElementById("P1Attack").innerHTML = bulbasaur.atk ;
      document.getElementById("P1Legend").innerHTML = bulbasaur.legend ;
    }
    if(x == 'charmander'){
      document.getElementById("P1Type").innerHTML = charmander.type ;
      document.getElementById("P1hp").innerHTML = charmander.hp ;
      document.getElementById("P1Defense").innerHTML = charmander.def ;
      document.getElementById("P1Attack").innerHTML = charmander.atk ;
      document.getElementById("P1Legend").innerHTML = charmander.legend ;
    }
    if(x == 'squirtle'){
      document.getElementById("P1Type").innerHTML = squirtle.type ;
      document.getElementById("P1hp").innerHTML = squirtle.hp ;
      document.getElementById("P1Defense").innerHTML = squirtle.def ;
      document.getElementById("P1Attack").innerHTML = squirtle.atk ;
      document.getElementById("P1Legend").innerHTML = squirtle.legend ;
    }if(x == 'articuno'){
      document.getElementById("P1Type").innerHTML = articuno.type ;
      document.getElementById("P1hp").innerHTML = articuno.hp ;
      document.getElementById("P1Defense").innerHTML = articuno.def ;
      document.getElementById("P1Attack").innerHTML = articuno.atk ;
      document.getElementById("P1Legend").innerHTML = articuno.legend ;
    }
    document.getElementById("currentStat1").innerHTML = document.getElementById("P1hp").innerHTML;
}

function Pokemon2() {
    var x = document.getElementById("P2Name").value;
    if(x == 'pikachu'){
      document.getElementById("P2Type").innerHTML = pikachu.type ;
      document.getElementById("P2hp").innerHTML = pikachu.hp ;
      document.getElementById("P2Defense").innerHTML = pikachu.def ;
      document.getElementById("P2Attack").innerHTML = pikachu.atk ;
      document.getElementById("P2Legend").innerHTML = pikachu.legend ;
    }
    if(x == 'bulbasaur'){
      document.getElementById("P2Type").innerHTML = bulbasaur.type ;
      document.getElementById("P2hp").innerHTML = bulbasaur.hp ;
      document.getElementById("P2Defense").innerHTML = bulbasaur.def ;
      document.getElementById("P2Attack").innerHTML = bulbasaur.atk ;
      document.getElementById("P2Legend").innerHTML = bulbasaur.legend ;
    }
    if(x == 'charmander'){
      document.getElementById("P2Type").innerHTML = charmander.type ;
      document.getElementById("P2hp").innerHTML = charmander.hp ;
      document.getElementById("P2Defense").innerHTML = charmander.def ;
      document.getElementById("P2Attack").innerHTML = charmander.atk ;
      document.getElementById("P2Legend").innerHTML = charmander.legend ;
    }
    if(x == 'squirtle'){
      document.getElementById("P2Type").innerHTML = squirtle.type ;
      document.getElementById("P2hp").innerHTML = squirtle.hp ;
      document.getElementById("P2Defense").innerHTML = squirtle.def ;
      document.getElementById("P2Attack").innerHTML = squirtle.atk ;
      document.getElementById("P2Legend").innerHTML = squirtle.legend ;
    }if(x == 'articuno'){
      document.getElementById("P2Type").innerHTML = articuno.type ;
      document.getElementById("P2hp").innerHTML = articuno.hp ;
      document.getElementById("P2Defense").innerHTML = articuno.def ;
      document.getElementById("P2Attack").innerHTML = articuno.atk ;
      document.getElementById("P2Legend").innerHTML = articuno.legend ;
    }
    document.getElementById("currentStat2").innerHTML = document.getElementById("P2hp").innerHTML;
}

var strikeCount =0;

function leftAttack() {
  strikeCount++;
  var P1Attack = document.getElementById("P1Attack").innerHTML;
  var P2hp = document.getElementById("currentStat2").innerHTML;
  var P2Defense = document.getElementById("P2Defense").innerHTML;

  P2hp = P2hp- (P1Attack-P2Defense);
  if(P2hp<0){
    P2hp=0;
  }
  document.getElementById("currentStat2").innerHTML = P2hp;
  aliveCheck();
}

function rightAttack() {
  strikeCount++;
  var P2Attack = document.getElementById("P2Attack").innerHTML;
  var P1hp = document.getElementById("currentStat1").innerHTML;
  var P1Defense = document.getElementById("P1Defense").innerHTML;

  P1hp = P1hp- (P2Attack-P1Defense);
  if(P1hp<0){
    P1hp=0;
  }
  document.getElementById("currentStat1").innerHTML = P1hp;
  aliveCheck();
}

function aliveCheck(){
  var P1hp = document.getElementById("currentStat1").innerHTML;
  var P2hp = document.getElementById("currentStat2").innerHTML;

  if(P1hp==0 || P2hp==0){
    document.getElementById("leftButton").disabled = true;
    document.getElementById("rightButton").disabled = true;

    if(P1hp>0){
      var winner = document.getElementById("P1Name").value;
      if(winner==0){
        document.getElementById("winner").innerHTML = "Select a pokemon before you can play!";
      } else{
        document.getElementById("winner").innerHTML = "The winner is " +winner + "!";
      }
    }
    else{
      var winner2 = document.getElementById("P2Name").value;
      if(winner2==0){
        document.getElementById("winner2").innerHTML = "Select a pokemon before you can play!";
      } else{
      document.getElementById("winner2").innerHTML = "The winner is " +winner2 + "!";
    }
    }
  }
}
</script>
